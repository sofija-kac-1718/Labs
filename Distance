import java.util.Scanner;

public class Distance
{
    public static void main (String[] args)
    {
        double x1, y1, x2, y2;

        Scanner scan = new Scanner(System.in);

        System.out.print ("Enter the coordinates of the first point " +
                "(put a space between them): ");
        x1 = scan.nextDouble();
        y1 = scan.nextDouble();

        System.out.print ("Enter the coordinates of the second point: ");
        x2 = scan.nextDouble();
        y2 = scan.nextDouble();

        double distance = Math.sqrt(java.lang.Math.pow(x1 - x2, 2) + java.lang.Math.pow(y1 - y2, 2));
        System.out.println("The distance between the first points and second points is: " + distance);

    }
}
